{
	"env": {
		"es2020": true,
		"browser": false,
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 11,
		"sourceType": "script"
	},
	"extends": "eslint:all",
	"root": true,
	"overrides": [
		{
			"files": ["*.html"],
			"env": {
				"browser": true,
				"node": false,
				"es6": true,
				"es2020": true
			},
			"parserOptions": {
				"ecmaVersion": 8
			},
			"rules": { "no-console": 1 }
		}
	],
	"reportUnusedDisableDirectives": true,
	"ignorePatterns": ["node_modules", ".upm", "routes/main/style.css"],
	"plugins": ["html"],
	"rules": {
		"indent": [1, "tab"],
		"no-tabs": 0,
		"quote-props": [1, "as-needed"],
		"comma-dangle": [
			1,
			{
				"arrays": "always-multiline",
				"objects": "always-multiline",
				"functions": "always-multiline"
			}
		],
		"strict": [2, "global"],
		"max-lines-per-function": [
			"error",
			{
				"max": 100,
				"skipBlankLines": true,
				"skipComments": true,
				"IIFEs": true
			}
		],
		"function-call-argument-newline": [1, "consistent"],
		"max-statements": 0,
		"padded-blocks": [1, "never"],
		"quotes": [1, "double", { "avoidEscape": true }],
		"function-paren-newline": 0,
		"one-var": [
			1,
			{
				"initialized": "consecutive",
				"uninitialized": "always"
			}
		],
		"init-declarations": 0,
		"wrap-iife": [1, "inside"],
		"func-names": 0,
		"dot-location": [1, "property"],
		"space-before-function-paren": [
			1,
			{
				"anonymous": "always",
				"named": "never",
				"asyncArrow": "always"
			}
		],
		"no-magic-numbers": 0,
		"require-unicode-regexp": 0,
		"id-length": [1, { "exceptions": ["_"], "max": 20, "min": 3 }],
		"object-curly-spacing": [1, "always"],
		"implicit-arrow-linebreak": 0,
		"max-params": [1, { "max": 5 }],
		"func-style": [1, "declaration", { "allowArrowFunctions": true }],
		"new-cap": [
			1,
			{
				"newIsCap": true,
				"capIsNew": true,
				"newIsCapExceptions": ["app", "Router", "database"],
				"capIsNewExceptions": ["app", "Router", "database"],
				"properties": true
			}
		],
		"array-element-newline": 0,
		"no-mixed-operators": 0,
		"no-console": 0,
		"multiline-ternary": [1, "always-multiline"],
		"no-ternary": 0,
		"max-len": [1, { "code": 100, "tabWidth": 2, "ignoreRegExpLiterals": true }]
	}
}
